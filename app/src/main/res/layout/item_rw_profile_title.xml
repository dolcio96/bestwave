<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="ui.profile.ProfileFragment"
    android:orientation="vertical"

    android:background="@color/md_blue_400">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bluMedio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/imageReviewTitleTextView"
            android:text="Pic"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_weight="4"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/dataTextViewProfileTitle"
            android:text="Date"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/starTextViewProfileTitle"
            android:text="Score"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_foreground"
            android:gravity="right"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:id="@+id/openInfoReviewProfileTitleTextView"
            android:layout_weight="1"
            android:textStyle="bold" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bluMedio" />


</LinearLayout>
